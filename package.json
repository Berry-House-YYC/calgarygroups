{
  "name": "calgarygroups",
  "version": "0.1.0",
  "private": true,
  "description": "Calgary Groups Directory",
  "scripts": {
    "dev": "npm-run-all --parallel dev:11ty dev:css",
    "dev:11ty": "eleventy --serve",
    "dev:css": "tailwindcss -i ./src/assets/tailwind.css -o ./src/static/assets/styles.css --watch",
    "build": "npm run build:css && npm run build:11ty",
    "build:11ty": "eleventy",
    "build:css": "tailwindcss -i ./src/assets/tailwind.css -o ./src/static/assets/styles.css --minify"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "autoprefixer": "^10.4.20",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17"
  }
}
