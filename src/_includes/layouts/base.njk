<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{% if title %}{{ title }} | {% elseif name %}{{ name }} | {% endif %}{{ site.name }}</title>
    <meta name="description" content="{% if description %}{{ description }}{% else %}{{ site.description }}{% endif %}" />
    <link rel="stylesheet" href="/assets/styles.css" />
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
  </head>
  <body class="min-h-screen bg-slate-50 text-slate-900">
    <a class="sr-only focus:not-sr-only focus:absolute focus:left-4 focus:top-4 focus:z-50 focus:rounded focus:bg-white focus:px-3 focus:py-2 focus:text-sm focus:shadow" href="#content">Skip to content</a>
    {% include "partials/header.njk" %}
    <main id="content" class="mx-auto max-w-6xl px-4 py-8">
      {{ content | safe }}
    </main>
    {% include "partials/footer.njk" %}
  </body>
</html>
