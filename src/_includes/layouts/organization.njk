---
layout: layouts/base.njk
---

{% set websiteUrl = content | extractFirstUrl %}
{% set orgDescription = description or (content | stripHtml | truncate(160)) %}

{# Override meta description for organization pages #}
{% set description = orgDescription %}
{# Override og:type for organization pages #}
{% set ogType = "organization" %}

<article class="mx-auto max-w-3xl">
  <div class="rounded-lg border border-slate-200 bg-white p-8 shadow-sm dark:border-brand-cyan/30 dark:bg-slate-800">
    <header class="space-y-4">
      <div class="flex flex-wrap items-start gap-3">
        <h1 class="min-w-0 flex-1 text-3xl font-bold tracking-tight">
          {% if websiteUrl %}
          <a href="{{ websiteUrl }}" target="_blank" rel="noopener noreferrer"
            class="text-slate-900 hover:text-brand-orange focus:outline-none focus:ring-2 focus:ring-brand-orange/50 dark:text-slate-100 dark:hover:text-cyan-400 dark:focus:ring-brand-cyan/50">
            {{ name }}
            <i aria-hidden="true" class="fa-solid fa-arrow-up-right-from-square ml-2 text-lg"></i>
          </a>
          {% else %}
          <span class="text-slate-900 dark:text-slate-100">{{ name }}</span>
          {% endif %}
        </h1>

        <span class="inline-flex items-center gap-2 rounded-full px-4 py-2 text-sm font-semibold ring-2 ring-inset"
          style="background-color: {% if type == 'Nonprofit' %}rgb(239 246 255){% elif type == 'Grassroots' %}rgb(236 253 245){% elif type == 'Club' %}rgb(250 245 255){% elif type == 'Chapter' %}rgb(238 242 255){% elif type == 'Cooperative' %}rgb(240 253 250){% elif type == 'Small Business' %}rgb(254 243 199){% else %}rgb(241 245 249){% endif %}; 
                      color: {% if type == 'Nonprofit' %}rgb(29 78 216){% elif type == 'Grassroots' %}rgb(5 150 105){% elif type == 'Club' %}rgb(126 34 206){% elif type == 'Chapter' %}rgb(79 70 229){% elif type == 'Cooperative' %}rgb(15 118 110){% elif type == 'Small Business' %}rgb(180 83 9){% else %}rgb(30 41 59){% endif %}; 
                      border-color: {% if type == 'Nonprofit' %}rgb(191 219 254){% elif type == 'Grassroots' %}rgb(167 243 208){% elif type == 'Club' %}rgb(233 213 255){% elif type == 'Chapter' %}rgb(199 210 254){% elif type == 'Cooperative' %}rgb(153 246 228){% elif type == 'Small Business' %}rgb(254 215 170){% else %}rgb(203 213 225){% endif %};">
          <i aria-hidden="true"
            class="{% if type == 'Nonprofit' %}fa-solid fa-hand-holding-heart{% elif type == 'Grassroots' %}fa-solid fa-seedling{% elif type == 'Club' %}fa-solid fa-user-group{% elif type == 'Chapter' %}fa-solid fa-network-wired{% elif type == 'Cooperative' %}fa-solid fa-handshake{% elif type == 'Small Business' %}fa-solid fa-store{% else %}fa-regular fa-circle{% endif %}"></i>
          <span>{{ type }}</span>
        </span>
      </div>

      {% if interests and interests.length > 0 %}
      <div class="flex flex-wrap gap-2">
        {% for tag in interests %}
        <span class="inline-flex items-center gap-2 rounded-full px-3 py-1.5 text-xs font-medium ring-1 ring-inset {% if tag == 'anti-racism' %}bg-amber-100 text-amber-900 ring-amber-200{% elif tag == 'arts' %}bg-fuchsia-50 text-fuchsia-800 ring-fuchsia-200{% elif tag == 'disability-neurodivergent' %}bg-violet-50 text-violet-800 ring-violet-200{% elif tag == 'education' %}bg-sky-50 text-sky-800 ring-sky-200{% elif tag == 'environment' %}bg-green-50 text-green-800 ring-green-200{% elif tag == 'health-wellness' %}bg-rose-50 text-rose-800 ring-rose-200{% elif tag == 'indigenous' %}bg-orange-50 text-orange-900 ring-orange-200{% elif tag == '2slgbtq+' %}bg-gradient-to-r from-rose-200 via-amber-200 to-sky-200 text-slate-900 ring-slate-200{% elif tag == 'low-income' %}bg-lime-50 text-lime-900 ring-lime-200{% elif tag == 'seniors' %}bg-stone-50 text-stone-800 ring-stone-200{% elif tag == 'international-solidarity' %}bg-purple-50 text-purple-800 ring-purple-200{% elif tag == 'sports-rec' %}bg-orange-50 text-orange-800 ring-orange-200{% elif tag == 'tech' %}bg-slate-50 text-slate-800 ring-slate-200{% elif tag == 'urban-issues' %}bg-gray-50 text-gray-800 ring-gray-200{% elif tag == 'women+' %}bg-pink-50 text-pink-800 ring-pink-200{% elif tag == 'youth' %}bg-indigo-50 text-indigo-800 ring-indigo-200{% elif tag == 'book' %}bg-amber-100 text-amber-900 ring-amber-200{% elif tag == 'general' %}bg-gray-50 text-gray-800 ring-gray-200{% elif tag == 'culture-heritage' %}bg-yellow-100 text-yellow-900 ring-yellow-200{% elif tag == 'justice' %}bg-slate-50 text-slate-800 ring-slate-200{% else %}bg-slate-50 text-slate-800 ring-slate-200{% endif %}">
          <i aria-hidden="true"
            class="{% if tag == 'anti-racism' %}fa-solid fa-hand-fist{% elif tag == 'arts' %}fa-solid fa-palette{% elif tag == 'disability-neurodivergent' %}fa-solid fa-universal-access{% elif tag == 'education' %}fa-solid fa-graduation-cap{% elif tag == 'environment' %}fa-solid fa-leaf{% elif tag == 'health-wellness' %}fa-solid fa-heart-pulse{% elif tag == 'indigenous' %}fa-solid fa-feather{% elif tag == '2slgbtq+' %}fa-solid fa-flag{% elif tag == 'low-income' %}fa-solid fa-hand-holding-dollar{% elif tag == 'seniors' %}fa-solid fa-person-cane{% elif tag == 'international-solidarity' %}fa-solid fa-handshake{% elif tag == 'sports-rec' %}fa-solid fa-dumbbell{% elif tag == 'tech' %}fa-solid fa-microchip{% elif tag == 'urban-issues' %}fa-solid fa-city{% elif tag == 'women+' %}fa-solid fa-venus{% elif tag == 'youth' %}fa-solid fa-child-reaching{% elif tag == 'book' %}fa-solid fa-book{% elif tag == 'general' %}fa-solid fa-users{% elif tag == 'justice' %}fa-solid fa-gavel{% elif tag == 'culture-heritage' %}fa-solid fa-globe{% else %}fa-regular fa-circle{% endif %}"></i>
          <span>{% if tag == 'anti-racism' %}Anti-racism{% elif tag == 'arts' %}Arts{% elif tag == 'disability-neurodivergent' %}Disability/Neurodivergent{% elif tag == 'education' %}Education{% elif tag == 'environment' %}Environment{% elif tag == 'health-wellness' %}Health and Wellness{% elif tag == 'indigenous' %}Indigenous{% elif tag == '2slgbtq+' %}2SLGBTQ+{% elif tag == 'low-income' %}Low-income{% elif tag == 'seniors' %}Seniors{% elif tag == 'international-solidarity' %}International Solidarity{% elif tag == 'sports-rec' %}Sports and Rec{% elif tag == 'tech' %}Tech{% elif tag == 'urban-issues' %}Urban Issues{% elif tag == 'women+' %}Women+{% elif tag == 'youth' %}Youth{% elif tag == 'book' %}Book Clubs{% elif tag == 'general' %}General{% elif tag == 'justice' %}Justice{% elif tag == 'culture-heritage' %}Culture and Heritage{% else %}{{ tag }}{% endif %}</span>
        </span>
        {% endfor %}
      </div>
      {% endif %}

      {% if age_range or meeting_format or location_area or status or identity_focused is not undefined %}
      <dl class="mt-6 grid grid-cols-1 gap-4 rounded-lg bg-slate-50 p-4 text-sm dark:bg-slate-700 sm:grid-cols-2">
        {% if age_range %}<div>
          <dt class="font-semibold text-slate-900 dark:text-slate-100">Age range</dt>
          <dd class="mt-1 text-slate-700 dark:text-slate-300">{{ age_range }}</dd>
        </div>{% endif %}
        {% if meeting_format %}<div>
          <dt class="font-semibold text-slate-900 dark:text-slate-100">Meeting format</dt>
          <dd class="mt-1 text-slate-700 dark:text-slate-300">{{ meeting_format }}</dd>
        </div>{% endif %}
        {% if location_area %}<div>
          <dt class="font-semibold text-slate-900 dark:text-slate-100">Location</dt>
          <dd class="mt-1 text-slate-700 dark:text-slate-300">{{ location_area }}</dd>
        </div>{% endif %}
        {% if status %}<div>
          <dt class="font-semibold text-slate-900 dark:text-slate-100">Status</dt>
          <dd class="mt-1 text-slate-700 dark:text-slate-300">{{ status }}</dd>
        </div>{% endif %}
        {% if identity_focused is not undefined %}<div>
          <dt class="font-semibold text-slate-900 dark:text-slate-100">Identity-focused</dt>
          <dd class="mt-1 text-slate-700 dark:text-slate-300">{% if identity_focused %}Yes{% else %}No{% endif %}</dd>
        </div>{% endif %}
      </dl>
      {% endif %}
    </header>

    <div class="prose prose-slate mt-8 max-w-none dark:prose-invert">
      {{ content | safe }}
    </div>
  </div>

  <div class="mt-6 text-center">
    <a href="/"
      class="inline-flex items-center gap-2 text-sm font-medium text-brand-orange hover:underline dark:text-cyan-400">
      <i aria-hidden="true" class="fa-solid fa-arrow-left"></i>
      <span>Back to Directory</span>
    </a>
  </div>
</article>