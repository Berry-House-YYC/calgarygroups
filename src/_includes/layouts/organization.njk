---
layout: layouts/base.njk
---

{% set websiteUrl = content | extractFirstUrl %}
{% set orgDescription = description or (content | stripHtml | truncate(160)) %}

{# Override meta description for organization pages #}
{% set description = orgDescription %}
{# Override og:type for organization pages #}
{% set ogType = "organization" %}

<article class="mx-auto max-w-3xl">
  <div class="rounded-lg border border-slate-200 bg-white p-8 shadow-sm dark:border-brand-cyan/30 dark:bg-slate-800">
    <header class="space-y-4">
      <div class="flex flex-wrap items-start gap-3">
        <h1 class="min-w-0 flex-1 text-3xl font-bold tracking-tight">
          {% if websiteUrl %}
          <a href="{{ websiteUrl }}" target="_blank" rel="noopener noreferrer"
            class="text-slate-900 hover:text-brand-orange focus:outline-none focus:ring-2 focus:ring-brand-orange/50 dark:text-slate-100 dark:hover:text-cyan-400 dark:focus:ring-brand-cyan/50">
            {{ name }}
            <i aria-hidden="true" class="fa-solid fa-arrow-up-right-from-square ml-2 text-lg"></i>
          </a>
          {% else %}
          <span class="text-slate-900 dark:text-slate-100">{{ name }}</span>
          {% endif %}
        </h1>

        <span class="inline-flex items-center gap-2 rounded-full px-4 py-2 text-sm font-semibold ring-2 ring-inset"
          style="background-color: {% if type == 'Nonprofit' %}rgb(239 246 255){% elif type == 'Grassroots' %}rgb(236 253 245){% elif type == 'Social Club' %}rgb(250 245 255){% elif type == 'Chapter' %}rgb(238 242 255){% elif type == 'Cooperative' %}rgb(240 253 250){% elif type == 'Small Business' %}rgb(254 243 199){% else %}rgb(241 245 249){% endif %}; 
                      color: {% if type == 'Nonprofit' %}rgb(29 78 216){% elif type == 'Grassroots' %}rgb(5 150 105){% elif type == 'Social Club' %}rgb(126 34 206){% elif type == 'Chapter' %}rgb(79 70 229){% elif type == 'Cooperative' %}rgb(15 118 110){% elif type == 'Small Business' %}rgb(180 83 9){% else %}rgb(30 41 59){% endif %}; 
                      border-color: {% if type == 'Nonprofit' %}rgb(191 219 254){% elif type == 'Grassroots' %}rgb(167 243 208){% elif type == 'Social Club' %}rgb(233 213 255){% elif type == 'Chapter' %}rgb(199 210 254){% elif type == 'Cooperative' %}rgb(153 246 228){% elif type == 'Small Business' %}rgb(254 215 170){% else %}rgb(203 213 225){% endif %};">
          <i aria-hidden="true"
            class="{% if type == 'Nonprofit' %}fa-solid fa-hand-holding-heart{% elif type == 'Grassroots' %}fa-solid fa-seedling{% elif type == 'Social Club' %}fa-solid fa-user-group{% elif type == 'Chapter' %}fa-solid fa-network-wired{% elif type == 'Cooperative' %}fa-solid fa-handshake{% elif type == 'Small Business' %}fa-solid fa-store{% else %}fa-regular fa-circle{% endif %}"></i>
          <span>{{ type }}</span>
        </span>
      </div>

      {% if interests and interests.length > 0 %}
      <div class="flex flex-wrap gap-2">
        {% for tag in interests %}
        <span class="inline-flex items-center gap-2 rounded-full px-3 py-1.5 text-xs font-medium ring-1 ring-inset"
          style="background-color: {% if tag == 'anti-racism' %}rgb(254 243 199){% elif tag == 'arts-culture' %}rgb(253 244 255){% elif tag == 'disability/neurodivergent' %}rgb(245 243 255){% elif tag == 'education' %}rgb(240 249 255){% elif tag == 'environment' %}rgb(240 253 244){% elif tag == 'health-wellness' %}rgb(255 241 242){% elif tag == 'indigenous' %}rgb(255 247 237){% elif tag == 'lgbtq2s' %}linear-gradient(to right, rgb(254 205 211), rgb(254 215 170), rgb(224 242 254)){% elif tag == 'low-income' %}rgb(247 254 231){% elif tag == 'seniors' %}rgb(250 250 249){% elif tag == 'social-impact' %}rgb(236 254 255){% elif tag == 'sports-rec' %}rgb(255 247 237){% elif tag == 'tech' %}rgb(248 250 252){% elif tag == 'urban-issues' %}rgb(250 250 250){% elif tag == 'women+' %}rgb(252 231 243){% elif tag == 'youth' %}rgb(238 242 255){% elif tag == 'book' %}rgb(254 243 199){% elif tag == 'general' %}rgb(249 250 251){% else %}rgb(241 245 249){% endif %}; 
                        color: {% if tag == 'anti-racism' %}rgb(146 64 14){% elif tag == 'arts-culture' %}rgb(134 25 143){% elif tag == 'disability/neurodivergent' %}rgb(109 40 217){% elif tag == 'education' %}rgb(3 105 161){% elif tag == 'environment' %}rgb(22 101 52){% elif tag == 'health-wellness' %}rgb(159 18 57){% elif tag == 'indigenous' %}rgb(154 52 18){% elif tag == 'lgbtq2s' %}rgb(15 23 42){% elif tag == 'low-income' %}rgb(77 124 15){% elif tag == 'seniors' %}rgb(68 64 60){% elif tag == 'social-impact' %}rgb(14 116 144){% elif tag == 'sports-rec' %}rgb(194 65 12){% elif tag == 'tech' %}rgb(51 65 85){% elif tag == 'urban-issues' %}rgb(63 63 70){% elif tag == 'women+' %}rgb(157 23 77){% elif tag == 'youth' %}rgb(67 56 202){% elif tag == 'book' %}rgb(146 64 14){% elif tag == 'general' %}rgb(55 65 81){% else %}rgb(30 41 59){% endif %}; 
                        border-color: {% if tag == 'anti-racism' %}rgb(254 215 170){% elif tag == 'arts-culture' %}rgb(245 208 254){% elif tag == 'disability/neurodivergent' %}rgb(221 214 254){% elif tag == 'education' %}rgb(186 230 253){% elif tag == 'environment' %}rgb(187 247 208){% elif tag == 'health-wellness' %}rgb(254 205 211){% elif tag == 'indigenous' %}rgb(254 215 170){% elif tag == 'lgbtq2s' %}rgb(203 213 225){% elif tag == 'low-income' %}rgb(217 249 157){% elif tag == 'seniors' %}rgb(231 229 228){% elif tag == 'social-impact' %}rgb(207 250 254){% elif tag == 'sports-rec' %}rgb(254 215 170){% elif tag == 'tech' %}rgb(203 213 225){% elif tag == 'urban-issues' %}rgb(212 212 216){% elif tag == 'women+' %}rgb(251 207 232){% elif tag == 'youth' %}rgb(199 210 254){% elif tag == 'book' %}rgb(254 215 170){% elif tag == 'general' %}rgb(229 231 235){% else %}rgb(203 213 225){% endif %};">
          <i aria-hidden="true"
            class="{% if tag == 'anti-racism' %}fa-solid fa-hand-fist{% elif tag == 'arts-culture' %}fa-solid fa-palette{% elif tag == 'disability/neurodivergent' %}fa-solid fa-universal-access{% elif tag == 'education' %}fa-solid fa-graduation-cap{% elif tag == 'environment' %}fa-solid fa-leaf{% elif tag == 'health-wellness' %}fa-solid fa-heart-pulse{% elif tag == 'indigenous' %}fa-solid fa-feather{% elif tag == 'lgbtq2s' %}fa-solid fa-flag{% elif tag == 'low-income' %}fa-solid fa-hand-holding-dollar{% elif tag == 'seniors' %}fa-solid fa-person-cane{% elif tag == 'social-impact' %}fa-solid fa-hands-holding-circle{% elif tag == 'sports-rec' %}fa-solid fa-dumbbell{% elif tag == 'tech' %}fa-solid fa-microchip{% elif tag == 'urban-issues' %}fa-solid fa-city{% elif tag == 'women+' %}fa-solid fa-venus{% elif tag == 'youth' %}fa-solid fa-child-reaching{% elif tag == 'book' %}fa-solid fa-book{% elif tag == 'general' %}fa-solid fa-users{% else %}fa-regular fa-circle{% endif %}"></i>
          <span>{% if tag == 'anti-racism' %}Anti-racism{% elif tag == 'arts-culture' %}Arts & Culture{% elif tag ==
            'disability/neurodivergent' %}Disability/Neurodivergent{% elif tag == 'education' %}Education{% elif tag ==
            'environment' %}Environment{% elif tag == 'health-wellness' %}Health & Wellness{% elif tag == 'indigenous'
            %}Indigenous{% elif tag == 'lgbtq2s' %}LGBTQ2S+{% elif tag == 'low-income' %}Low-income{% elif tag ==
            'seniors' %}Seniors{% elif tag == 'social-impact' %}Social Impact{% elif tag == 'sports-rec' %}Sports &
            rec{% elif tag == 'tech' %}Tech{% elif tag == 'urban-issues' %}Urban Issues{% elif tag == 'women+'
            %}Women+{% elif tag == 'youth' %}Youth{% elif tag == 'book' %}Book Clubs{% elif tag == 'general' %}General{%
            else %}{{ tag }}{% endif %}</span>
        </span>
        {% endfor %}
      </div>
      {% endif %}

      {% if age_range or meeting_format or location_area or status or identity_focused is not undefined %}
      <dl class="mt-6 grid grid-cols-1 gap-4 rounded-lg bg-slate-50 p-4 text-sm dark:bg-slate-700 sm:grid-cols-2">
        {% if age_range %}<div>
          <dt class="font-semibold text-slate-900 dark:text-slate-100">Age range</dt>
          <dd class="mt-1 text-slate-700 dark:text-slate-300">{{ age_range }}</dd>
        </div>{% endif %}
        {% if meeting_format %}<div>
          <dt class="font-semibold text-slate-900 dark:text-slate-100">Meeting format</dt>
          <dd class="mt-1 text-slate-700 dark:text-slate-300">{{ meeting_format }}</dd>
        </div>{% endif %}
        {% if location_area %}<div>
          <dt class="font-semibold text-slate-900 dark:text-slate-100">Location</dt>
          <dd class="mt-1 text-slate-700 dark:text-slate-300">{{ location_area }}</dd>
        </div>{% endif %}
        {% if status %}<div>
          <dt class="font-semibold text-slate-900 dark:text-slate-100">Status</dt>
          <dd class="mt-1 text-slate-700 dark:text-slate-300">{{ status }}</dd>
        </div>{% endif %}
        {% if identity_focused is not undefined %}<div>
          <dt class="font-semibold text-slate-900 dark:text-slate-100">Identity-focused</dt>
          <dd class="mt-1 text-slate-700 dark:text-slate-300">{% if identity_focused %}Yes{% else %}No{% endif %}</dd>
        </div>{% endif %}
      </dl>
      {% endif %}
    </header>

    <div class="prose prose-slate mt-8 max-w-none dark:prose-invert">
      {{ content | safe }}
    </div>
  </div>

  <div class="mt-6 text-center">
    <a href="/"
      class="inline-flex items-center gap-2 text-sm font-medium text-brand-orange hover:underline dark:text-cyan-400">
      <i aria-hidden="true" class="fa-solid fa-arrow-left"></i>
      <span>Back to Directory</span>
    </a>
  </div>
</article>