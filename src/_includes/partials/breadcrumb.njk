<!-- Breadcrumb Navigation -->
{% if page.url != "/" %}
<nav aria-label="Breadcrumb" class="mb-8">
  <ol class="flex items-center space-x-2 text-sm text-slate-600 dark:text-slate-400">
    <li>
      <a href="/" class="hover:text-brand-orange dark:hover:text-cyan-400">
        <i aria-hidden="true" class="fa-solid fa-home mr-1"></i>
        Home
      </a>
    </li>
    <li aria-hidden="true" class="text-slate-400">/</li>
    {% if layout == "layouts/organization.njk" %}
    <li>
      <a href="/" class="hover:text-brand-orange dark:hover:text-cyan-400">Directory</a>
    </li>
    <li aria-hidden="true" class="text-slate-400">/</li>
    <li>
      <span class="text-slate-900 dark:text-slate-100">{{ name }}</span>
    </li>
    {% else %}
    <li>
      <span class="text-slate-900 dark:text-slate-100">{{ title or name }}</span>
    </li>
    {% endif %}
  </ol>
</nav>
{% endif %}
